<div class="card shadow-sm mb-4">
  <div class="card-body">
    <div class="row">
      <div class="col-lg-6">
        <h4 class="card-title mb-4">Ad Details</h4>
        
        <div class="mb-3">
          <div class="d-flex align-items-center mb-2">
            <i class="bi bi-person-circle me-2"></i>
            <strong class="text-muted">User:</strong>
            <span class="ms-2"><%= @paid_ad.user.name %></span>
          </div>

          <div class="d-flex align-items-center mb-2">
            <i class="bi bi-hash me-2"></i>
            <strong class="text-muted">Quantity:</strong>
            <span class="ms-2"><%= @paid_ad.quantity %></span>
          </div>

          <div class="d-flex align-items-center mb-2">
            <i class="bi bi-tag me-2"></i>
            <strong class="text-muted">Ad Type:</strong>
            <span class="ms-2"><%= @paid_ad.ad_type.humanize %></span>
          </div>

          <div class="d-flex align-items-center mb-2">
            <i class="bi bi-credit-card me-2"></i>
            <strong class="text-muted">Payment Method:</strong>
            <span class="ms-2"><%= @paid_ad.payment_method.humanize %></span>
          </div>

          <div class="d-flex align-items-center mb-3">
            <i class="bi bi-circle-fill me-2 <%= @paid_ad.status == 'approved' ? 'text-success' : 'text-warning' %>"></i>
            <strong class="text-muted">Status:</strong>
            <span class="ms-2"><%= @paid_ad.status.humanize %></span>
          </div>
        </div>

        <% if @paid_ad.proof_image.attached? %>
          <div class="mt-3">
            <%= link_to @paid_ad.proof_image, class: "btn btn-outline-primary", target: "_blank" do %>
              <i class="bi bi-image me-2"></i>View Proof Image
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
