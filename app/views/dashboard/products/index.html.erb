<div class="container">
  <%= render partial: "/dashboard/shared/breadcrum" %>
  <!-- row -->
  <div class="row">
    <div class="col-xl-12 col-12 mb-5">
      <!-- card -->
      <div class="card h-100 card-lg">
        <div class="px-6 py-6">
          <div class="row justify-content-between">
            <!-- form -->
            <div class="col-lg-4 col-md-6 col-12 mb-2 mb-lg-0">
              <form class="d-flex" role="search">
                <input class="form-control" type="search" placeholder="Search Ads" aria-label="Search"/>
              </form>
            </div>
          </div>
        </div>
        <!-- card body -->
        <div class="card-body p-0">
          <!-- table -->
          <div class="table-responsive">
            <table class="table table-centered table-hover text-nowrap table-borderless mb-0 table-with-checkbox">
              <thead class="bg-light">
              <tr>
                <th>
                  <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="checkAll"/>
                    <label class="form-check-label" for="checkAll"></label>
                  </div>
                </th>
                <th>Ad Name</th>
                <th>Category</th>
                <th>Status</th>
                <th>Price</th>
                <th>Hight</th>
                <th>Weight</th>
                <th>Breed</th>
                <th>Verified</th>
                <th>Quantity</th>
                <th>Created at</th>
                <th>Image</th>
                <th>Actions</th>
              </tr>
              </thead>
              <tbody>
              <% @products.each do |product| %>
                <tr>
                  <td>
                    <div class="form-check">
                      <input class="form-check-input" type="checkbox" value="" id="productOne"/>
                      <label class="form-check-label" for="productOne"></label>
                    </div>
                  </td>
                  <td><a href="#" class="text-reset"><%= product.name %></a></td>
                  <td><%= product.category.name %></td>

                  <td>
                    <span class="badge bg-light-primary text-dark-primary"><%= product.status %></span>
                  </td>
                  <td><%= product.price %></td>
                  <td><%= product.height %></td>
                  <td><%= product.weight %></td>
                  <td><%= product.breed %></td>
                  <td><%= product.verified %></td>
                  <td><%= product.quantity %></td>
                  <td><%= product.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
                  <td>
                    <a href="#!">
                      <%= image_tag url_for(product.watermarked_images.first), alt: product.short_description, class: 'icon-shape icon-md' if product.images.attached? %>
                    </a>
                  </td>
                </tr>
              <% end %>
              </tbody>
            </table>
          </div>
        </div>
        <%= paginate @products %>
      </div>
    </div>
  </div>
</div>
