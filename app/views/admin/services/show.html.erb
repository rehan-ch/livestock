<!-- Page header -->
<div class="container-fluid">
  <div class="row mb-4">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center">
        <h1 class="mb-0 fw-bold">Service Details</h1>
        <%= link_to admin_services_path, class: "btn btn-light" do %>
          <i class="bi bi-arrow-left"></i> Back to Service
        <% end %>
      </div>
    </div>
  </div>

  <!-- Service details card -->
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-body">
          <%= render @service %>
        </div>
      </div>
    </div>
  </div>

  <!-- Action buttons -->
  <div class="row mt-4">
    <div class="col-12">
      <div class="card">
        <div class="card-body">
          <div class="d-flex gap-2">
            <%= link_to edit_admin_service_path(@service), class: "btn btn-primary" do %>
              <i class="bi bi-pencil"></i> Edit Service
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

