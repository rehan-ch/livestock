<div class="container mt-4 mb-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3">Chat Management</h1>
  </div>

  <div class="card">
    <div class="card-body p-0">
      <div class="table-responsive">
        <table class="table table-hover mb-0">
          <thead>
            <tr>
              <th>Seller</th>
              <th>Buyer</th>
              <th>Product</th>
              <th>Last Updated</th>
              <th class="text-end">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @chats.each do |chat| %>
              <tr>
                <td><%= chat.seller.name %></td>
                <td><%= chat.buyer.name %></td>
                <td><%= chat.product.name %></td>
                <td><%= time_ago_in_words(chat.updated_at) %> ago</td>
                <td class="text-end">
                  <%= link_to 'View Conversation', admin_chat_path(chat), class: 'btn btn-sm btn-primary' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <div class="mt-3">
    <%= paginate @chats %>
  </div>
</div> 