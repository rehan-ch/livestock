<div class="container">
  <%= render partial: "/admin/shared/breadcrum" %>
  
  <div class="row">
    <div class="col-xl-12 col-12 mb-5">
      <div class="card h-100 card-lg">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h4 class="mb-0">Social Media Link Details</h4>
          <div class="d-flex gap-2">
            <%= link_to edit_admin_social_media_link_path(@social_media_link), class: "btn btn-primary" do %>
              <i class="bi bi-pencil"></i> Edit
            <% end %>
            <%= link_to admin_social_media_links_path, class: "btn btn-secondary" do %>
              <i class="bi bi-arrow-left"></i> Back
            <% end %>
          </div>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-6">
              <table class="table table-borderless">
                <tr>
                  <td class="fw-bold">Platform:</td>
                  <td>
                    <div class="d-flex align-items-center">
                      <div class="me-3">
                        <%= @social_media_link.icon_html.html_safe %>
                      </div>
                      <span><%= @social_media_link.display_name %></span>
                    </div>
                  </td>
                </tr>
                <tr>
                  <td class="fw-bold">URL:</td>
                  <td>
                    <a href="<%= @social_media_link.url %>" target="_blank" class="text-decoration-none">
                      <%= @social_media_link.url %>
                    </a>
                  </td>
                </tr>
                <tr>
                  <td class="fw-bold">Icon Class:</td>
                  <td><span class="badge bg-light-primary text-dark-primary"><%= @social_media_link.icon_class %></span></td>
                </tr>
                <tr>
                  <td class="fw-bold">Status:</td>
                  <td>
                    <% if @social_media_link.active? %>
                      <span class="badge bg-success">Active</span>
                    <% else %>
                      <span class="badge bg-secondary">Inactive</span>
                    <% end %>
                  </td>
                </tr>
                <tr>
                  <td class="fw-bold">Created:</td>
                  <td><%= @social_media_link.created_at.strftime("%B %d, %Y at %I:%M %p") %></td>
                </tr>
                <tr>
                  <td class="fw-bold">Updated:</td>
                  <td><%= @social_media_link.updated_at.strftime("%B %d, %Y at %I:%M %p") %></td>
                </tr>
              </table>
            </div>
            <div class="col-md-6">
              <div class="card bg-light">
                <div class="card-body">
                  <h6 class="card-title">Preview</h6>
                  <p class="card-text">This is how the social media link will appear in the footer:</p>
                  <div class="d-flex align-items-center">
                    <a href="<%= @social_media_link.url %>" class="social-links me-2" target="_blank">
                      <%= @social_media_link.icon_html.html_safe %>
                    </a>
                    <span class="text-muted"><%= @social_media_link.display_name %></span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div> 