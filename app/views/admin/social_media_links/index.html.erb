<div class="container">
  <%= render partial: "/admin/shared/breadcrum" %>
  <!-- row -->
  <div class="row">
    <div class="col-xl-12 col-12 mb-5">
      <!-- card -->
      <div class="card h-100 card-lg">
        <!-- card body -->
        <div class="card-body p-0">
          <!-- table -->
          <div class="table-responsive">
            <table class="table table-centered table-hover text-nowrap table-borderless mb-0 table-with-checkbox">
              <thead class="bg-light">
                <tr>
                  <th>Platform</th>
                  <th>URL</th>
                  <th>Icon</th>
                  <th>Status</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% @social_media_links.each do |link| %>
                  <tr>
                    <td>
                      <div class="d-flex align-items-center">
                        <div class="me-3">
                          <%= link.icon_html.html_safe %>
                        </div>
                        <div>
                          <h6 class="mb-0"><%= link.display_name %></h6>
                        </div>
                      </div>
                    </td>
                    <td>
                      <a href="<%= link.url %>" target="_blank" class="text-decoration-none">
                        <%= truncate(link.url, length: 50) %>
                      </a>
                    </td>
                    <td>
                      <span class="badge bg-light-primary text-dark-primary"><%= link.icon_class %></span>
                    </td>
                    <td>
                      <% if link.active? %>
                        <span class="badge bg-success">Active</span>
                      <% else %>
                        <span class="badge bg-secondary">Inactive</span>
                      <% end %>
                    </td>
                    <td>
                      <div class="d-flex gap-2">
                        <%= link_to edit_admin_social_media_link_path(link), class: "btn btn-primary" do %>
                          <i class="bi bi-pencil"></i> Edit
                        <% end %>
                        <%= link_to admin_social_media_link_path(link), class: "btn btn-primary" do %>
                          <i class="bi bi-eye"></i> View
                        <% end %>
                        <%= link_to admin_social_media_link_path(link), 
                            method: :delete, 
                            class: "btn btn-danger",
                            data: { confirm: "Are you sure you want to delete this social media link?" } do %>
                          <i class="bi bi-trash"></i> Delete
                        <% end %>
                      </div>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div> 