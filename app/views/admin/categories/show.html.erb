<%= render partial: "/admin/shared/breadcrum" %>

<%= render @category %>

<div class="row">
  <div class="col-8">
    <%= link_to "Edit", edit_admin_category_path(@category), class: "btn btn-primary me-2" %>
    <%= link_to "Back", admin_categories_path, class: "btn btn-secondary me-2" %>
  </div>
  <div class="col-4">
    <%= form_with url: admin_category_path(@category), method: :delete, data: { confirm: "Are you sure?" } do %>
      <%= submit_tag "Delete", class: "btn btn-danger" %>
    <% end %>
  </div>
</div>
