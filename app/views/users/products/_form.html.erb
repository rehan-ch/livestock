<main class="main-content-wrapper">
  <div class="container">
<%= render partial: "/users/shared/breadcrum" %>

    <div class="row">
      <div class="col-lg-8 col-12">
        <div class="card mb-6 card-lg">
          <div class="card-body p-6">
            <h4 class="mb-4 h5">Product Details</h4>
            <%= form_with(model: [:users, product]) do |form| %>
              <% if product.errors.any? %>
                <div style="color: red">
                  <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>
                  <ul>
                    <% product.errors.each do |error| %>
                      <li><%= error.full_message %></li>
                    <% end %>
                  </ul>
                </div>
              <% end %>
              <div class="row">
                <div class="mb-3 col-lg-6">
                  <%= form.label :name, class: "form-label" %>
                  <%= form.text_field :name, class: "form-control" %>
                </div>
                <div class="mb-3 col-lg-6">
                  <%= form.label :category_id, class: "form-label" %>
                  <%= form.select :category_id, Category.all.map { |category| [category.name.humanize, category.id] }, { include_blank: "Select Category" }, class: "form-select" %>
                </div>
                <div class="mb-3 col-lg-6">
                  <%= form.label :status, class: "form-label" %>
                  <%= form.select :status, Product.statuses.keys.map { |status| [status.humanize, status] }, { include_blank: "Select Status" }, class: "form-select" %>
                </div>
                <div class="mb-3 col-lg-6">
                  <%= form.label :short_description, class: "form-label" %>
                  <%= form.text_field :short_description, class: "form-control" %>
                </div>
                <div class="mb-3 col-lg-6">
                  <%= form.label :long_description, class: "form-label" %>
                  <%= form.text_area :long_description, class: "form-control" %>
                </div>
                <div class="mb-3 col-lg-6">
                  <%= form.label :age_in_years, class: "form-label" %>
                  <%= form.number_field :age_in_years, class: "form-control" %>
                </div>
                <div class="mb-3 col-lg-6">
                  <%= form.label :age_in_months, class: "form-label" %>
                  <%= form.number_field :age_in_months, class: "form-control" %>
                </div>
                <div class="mb-3 col-lg-6">
                  <%= form.label :sex, class: "form-label" %>
                  <%= form.select :sex, Product.sexes.keys.map { |sex| [sex.humanize, sex] }, { include_blank: "Select Sex" }, class: "form-select" %>
                </div>
                <div class="mb-3 col-lg-6">
                  <%= form.label :breed, class: "form-label" %>
                  <%= form.text_field :breed, class: "form-control" %>
                </div>
                <div class="mb-3 col-lg-6">
                  <%= form.label :height, class: "form-label" %>
                  <%= form.text_field :height, class: "form-control" %>
                </div>
                <div class="mb-3 col-lg-6">
                  <%= form.label :wight, class: "form-label" %>
                  <%= form.text_field :wight, class: "form-control" %>
                </div>
                <div class="mb-3 col-lg-6">
                  <%= form.label :teeth, class: "form-label" %>
                  <%= form.number_field :teeth, class: "form-control" %>
                </div>
                <div class="mb-3 col-lg-6">
                  <%= form.label :castrated, class: "form-label" %>
                  <%= form.check_box :castrated, class: "form-check-input" %>
                </div>
                <div class="mb-3 col-lg-6">
                  <%= form.label :price, class: "form-label" %>
                  <%= form.number_field :price, class: "form-control" %>
                </div>
                <div class="mb-3 col-lg-6">
                  <%= form.label :quantity, class: "form-label" %>
                  <%= form.number_field :quantity, class: "form-control" %>
                </div>
                <div class="mb-3 col-lg-6">
                  <%= form.label :city, class: "form-label" %>
                  <%= form.text_field :city, class: "form-control" %>
                </div>
                <div class="mb-3 col-lg-6">
                  <%= form.label :countary, class: "form-label" %>
                  <%= form.text_field :countary, class: "form-control" %>
                </div>
                <div class="mb-3 col-lg-6">
                  <%= form.label :state, class: "form-label" %>
                  <%= form.text_field :state, class: "form-control" %>
                </div>
                <div class="mb-3 col-lg-6">
                  <%= form.label :address, class: "form-label" %>
                  <%= form.text_field :address, class: "form-control" %>
                </div>
                <div class="mb-3 col-lg-6">
                  <%= form.label :self_stock, class: "form-label" %>
                  <%= form.check_box :self_stock, class: "form-check-input" %>
                </div>
                <div class="mb-3 col-lg-6">
                  <%= form.label :verified, class: "form-label" %>
                  <%= form.check_box :verified, class: "form-check-input" %>
                </div>
              </div>
              <div class="mb-3">
                <%= form.submit class: "btn btn-primary" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
