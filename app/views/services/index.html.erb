<p style="color: green"><%= notice %></p>

<h1>Services</h1>

<div id="services">

  <% if @services.present? %>
    <% @services.each do |service| %>
      <%= render service %>
      <p>
        <%= link_to "Show this service", service %>
      </p>
    <% end %>
  <% else %>
    <div class="container">
      <div class="news-list-warp">
        <h1 class="text-align-center mx-auto">
          No services available!
        </h1>
      </div>
    </div>
  <% end %>
</div>
