<div class="container">
  <section
    style="background-image: url('<%= url_for(@blog.banner_image) if @blog.banner_image.attached? %>'); background-repeat: no-repeat; background-position: center center; background-attachment: fixed; -webkit-background-size: cover; -moz-background-size: cover; -o-background-size: cover; background-size: cover;">

    <div class="sub-header overlay">
      <h1><%= @blog.title %></h1>
    </div>
  </section>
  <section>
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="new-detail-warp">
            <div class="content-detail content-new-detail">
              <%= raw @blog.body %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>