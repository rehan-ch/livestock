<main>
  <!-- section -->
  <div class="mt-4">
    <div class="container">
      <div class="row">
        <div class="col-12">
          <!-- breadcrumb -->
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
              <li class="breadcrumb-item"><a href="#!">Home</a></li>
              <li class="breadcrumb-item"><a href="#!">Blog</a></li>
              <li class="breadcrumb-item active" aria-current="page">Blog Single</li>
            </ol>
          </nav>
        </div>
      </div>
    </div>
  </div>
  <!-- section -->
  <section class="my-lg-14 my-8">
    <div class="container">
      <div class="row">
        <div class="col-md-8 offset-md-2">
          <!-- text -->
          <div class="mb-5">
            <h1 class="fw-bold text-center"><%= @blog.title.humanize %></h1>
            <div class="d-flex justify-content-center text-muted mt-4">
              <span class="me-2"><small><%= @blog.published_at.strftime('%d %B %Y') %></small></span>
              <span>
                              <small>
                                 Read time:
                                 <span class="text-dark fw-bold"><%= (@blog.body&.split(" ")&.length / 200).round(2) %> min</span>
                              </small>
                           </span>
            </div>
          </div>
          <!-- img -->
          <div class="mb-8">
            <%= image_tag url_for(@blog.banner_image), alt: @blog.title, class: "img-fluid rounded" if @blog.banner_image.attached? %>
          </div>

          <div>
            <!-- text -->
            <div class="mb-4">
              <%= raw @blog.body %>
            </div>
          </div>
          <hr class="mt-8 mb-5" />
          <%# <div class="d-flex justify-content-between align-items-center mb-5">
            <div class="d-flex align-items-center">
              <img src="/assets/theme/avatar/avatar-4.jpg" alt="" class="rounded-circle avatar-md" />
              <div class="ms-2 lh-1">
                <h5 class="mb-0">Dustin Warren</h5>
                <span class="text-primary small">Marketing Manager</span>
              </div>
            </div>
            <div>
              <!-- social -->
              <span class="ms-2 text-muted">Share</span>
              <a href="#" class="ms-2 text-muted"><i class="bi bi-facebook fs-6"></i></a>
              <a href="#" class="ms-2 text-muted"><i class="bi bi-twitter fs-6"></i></a>
              <a href="#" class="ms-2 text-muted"><i class="bi bi-linkedin fs-6"></i></a>
            </div>
          </div %>
        </div>
      </div>
    </div>
  </section>
</main>