<div class="my-8">
  <div class="row">
    <div class="col-12">
      <h4 class="mb-4">Details</h4>
    </div>
    <div class="col-12 col-lg-6">
      <table class="table table-striped">
        <!-- table -->
        <tbody>
        <tr>
          <td>Owner:</td>
          <td><%= @product.user_name %></td>
        </tr>
        <tr>
          <td>Availability:</td>
          <td>In Stock</td>
        </tr>
        <tr>
          <td>Age In Years:</td>
          <td><%= @product.age_in_years %></td>
        </tr>
        <tr>
          <td>Age In Months:</td>
          <td><%= @product.age_in_months %></td>
        </tr>
        <tr>
          <td>Sex:</td>
          <td><%= @product.sex %></td>
        </tr>
        <tr>
          <td>Breed:</td>
          <td><%= @product.breed %></td>
        </tr>
        <tr>
          <td>Height:</td>
          <td><%= @product.height %></td>
        </tr>
        <tr>
          <td>Weight:</td>
          <td><%#= @product.weight %></td>
        </tr>
        <tr>
          <td>Teeth:</td>
          <td><%= @product.teeth %></td>
        </tr>
        <tr>
          <td>Castrated:</td>
          <td><%= @product.castrated %></td>
        </tr>
        <tr>
          <td>Quantity:</td>
          <td><%= @product.quantity %></td>
        </tr>
        </tbody>
      </table>
    </div>
    <div class="col-12 col-lg-6">
      <table class="table table-striped">
        <!-- table -->
        <tbody>
          <tr>
            <td>City:</td>
            <td><%= @product.city %></td>
          </tr>
          <tr>
            <td>Country:</td>
            <td><%= @product.country %></td>
          </tr>
          <tr>
            <td>State:</td>
            <td><%= @product.state %></td>
          </tr>
          <tr>
            <td>Address:</td>
            <td><%= @product.address %></td>
          </tr>
          <tr>
            <td>Self Stock:</td>
            <td><%= @product.verified ? "Yes" : "No" %></td>
          </tr>
          <tr>
            <td>Verified:</td>
            <td><%= @product.verified ? "Yes" : "No" %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>