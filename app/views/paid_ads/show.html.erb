<div class="container py-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">Paid Advertisement Details</h2>
    <%= link_to paid_ads_path, class: "btn btn-outline-secondary" do %>
      <i class="bi bi-arrow-left me-2"></i>Back to Paid Ads
    <% end %>
  </div>

  <%= render @paid_ad %>

  <div class="card shadow-sm">
    <div class="card-body">
      <div class="row">
        <div class="col-md-6">
          <% if @paid_ad.pending? %>
            <div class="d-flex gap-3 mb-3">
              <%= button_to approve_paid_ad_path(@paid_ad), method: :patch, class: "btn btn-success", data: { turbo_confirm: "Are you sure you want to approve this advertisement?" } do %>
                <i class="bi bi-check-circle me-2"></i>Approve
              <% end %>
              
              <%= button_to reject_paid_ad_path(@paid_ad), method: :patch, class: "btn btn-warning", data: { turbo_confirm: "Are you sure you want to reject this advertisement?" } do %>
                <i class="bi bi-x-circle me-2"></i>Reject
              <% end %>
            </div>
          <% end %>
        </div>
        <div class="col-md-6 text-md-end">
          <div class="d-flex gap-3 justify-content-md-end">
            <%= link_to edit_paid_ad_path(@paid_ad), class: "btn btn-primary" do %>
              <i class="bi bi-pencil me-2"></i>Edit Advertisement
            <% end %>

            <%= button_to @paid_ad, method: :delete, class: "btn btn-danger", data: { turbo_confirm: "Are you sure you want to delete this advertisement?" } do %>
              <i class="bi bi-trash me-2"></i>Delete Advertisement
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
