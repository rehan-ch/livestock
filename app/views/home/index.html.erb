      <!-- row -->
      <div class="row row-cols-lg-5 row-cols-md-3 row-cols-2">
        <% products = Product.order("RANDOM()").limit(15) %>
        <% columns = 5 %> <!-- Number of columns -->
        <% products_per_column = (products.count.to_f / columns).ceil %>

        <% products.each_slice(products_per_column).each_with_index do |product_group, column_index| %>
          <div class="col-md-<%= 12 / columns %>">
            <div>
              <!-- list -->
              <ul class="list-unstyled">
                <% product_group.each do |product| %>
                  <li class="mb-2">
                    <a href="<%= products_path(city: product.city) %>" class="text-reset">
                      <i class="feather-icon icon-arrow-right me-1"></i>
                      <%= product.city %>
                    </a>
                  </li>
                <% end %>
              </ul>
            </div>
          </div>
        <% end %>

      </div>
    </div>
  </section>
