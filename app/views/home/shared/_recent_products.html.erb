<section class="my-lg-14 my-8">
  <div class="container">
    <!-- row -->
    <div class="row align-items-center mb-6">
      <div class="col-lg-10 col-10">
        <!-- heading -->
        <h3 class="align-items-center d-flex mb-0 h4">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="feather feather-star text-primary">
            <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon>
          </svg>
          <span class="ms-3">Recent Ads</span>
        </h3>
      </div>
      <div class="col-lg-2 col-2">
        <div class="slider-arrow" id="slider-fourth-arrows"></div>
      </div>
    </div>
    <!-- slider -->
    <div class="product-slider-second" id="slider-fourth">
      <!-- item -->
      <% @recent_products.each do |product| %>
        <div class="item">
          <!-- item -->
          <div class="card card-product mb-lg-4">
            <div class="card-body">
              <div class="text-center position-relative">
                <!-- badge -->
<!--                <div class="position-absolute top-0 start-0">-->
<!--                  <span class="badge bg-danger">Featured</span>-->
<!--                </div>-->

<!--                 <a href="#!"><img src="/assets/theme/products/product-img-18.jpg" alt="Grocery Ecommerce Template" class="mb-3 img-fluid" /></a>-->

                <%= link_to product_path(product) do %>
                  <div class="product-img-container">
                    <% if product.primary_image.attached? %>
                      <%= image_tag url_for(product.watermarked_primary_image), alt: product.short_description %>
                    <% else %>
                      <%= image_tag 'theme/png/no-image.png', alt: product.short_description %>
                    <% end %>
                  </div>
                <% end %>
              </div>
              <!-- title -->
              <div class="text-small mb-1">
                <a href="#!" class="text-decoration-none text-muted"><small><%= product.category_name %></small></a>
              </div>
              <h2 class="fs-6">
                <%= link_to product.name, product_path(product), class: 'text-inherit text-decoration-none' %>
              </h2>
              <div class="text-warning">
                <!-- rating -->
                <small>
                  <i class="bi bi-star-fill"></i>
                  <i class="bi bi-star-fill"></i>
                  <i class="bi bi-star-fill"></i>
                  <i class="bi bi-star-half"></i>
                  <i class="bi bi-star"></i>
                </small>

                  <span class="text-muted small">3.5 (456)</span>

              </div>
              <!-- price -->
              <div class="d-flex justify-content-between align-items-center mt-3">
                <div>
                  <span class="text-dark">Rs: <%= product.price %></span>
                </div>
              </div>
            </div>
          </div>
        </div>
      <%end%>
    </div>
    </div>
  </div>
</section>