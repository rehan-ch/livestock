<section class="mt-3">
  <div class="container">
    <div class="hero-slider">
      <% Slider.active.ordered.each do |slider| %>
        <div style="background: url(<%= url_for(slider.image) || asset_path('banner/b1.jpg') %>) no-repeat; background-size: cover; border-radius: 0.5rem; background-position: center">
          <div class="ps-lg-12 py-lg-16 col-xxl-5 col-lg-7 col-md-8 py-14 px-8 text-xs-center">
            <h1 class="text-dark display-5 fw-bold mt-4"><%= slider.title.html_safe %></h1>
            <p class="lead text-dark"><%= slider.content %></p>
            <% if slider.button_text.present? && slider.button_link.present? %>
              <a href="<%= slider.button_link %>" class="btn btn-dark mt-3">
                <%= slider.button_text %>
                <i class="feather-icon icon-arrow-right ms-1"></i>
              </a>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>